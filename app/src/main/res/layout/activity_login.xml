<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="50dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/b1_icon"
        android:transitionName="example_transition"
        android:layout_gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:errorEnabled="true"
        app:hintTextColor="@color/colorTextTitle"
        app:boxStrokeColor="@color/colorTextTitle"
        app:boxStrokeWidthFocused="2dp"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:startIconTint="@color/colorTextTitle"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorTextTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:fontFamily="@font/product_regular"
            android:textColor="@color/colorTextTitle"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_text_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:hintTextColor="@color/colorTextTitle"
        app:boxStrokeColor="@color/colorTextTitle"
        app:boxStrokeWidthFocused="2dp"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/colorTextTitle"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorTextTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Id"
            android:fontFamily="@font/product_regular"
            android:textColor="@color/colorTextTitle"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:layout_marginTop="10dp"
        android:text="Register"
        app:fontFamily="@font/product_regular"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="194dp"
        android:textColor="@color/colorBackground"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:gravity="end"
        android:padding="15dp"
        android:text="Register Later"
        android:clickable="true"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorTextTitle"
        app:fontFamily="@font/product_regular" />
</LinearLayout>